{% case media.media_type %}
    {% when 'image' %}
        <img class="w-full h-full object-cover" src="{{media |  image_url }}" width="500" height="250" alt="{{media.preview_image.alt}}">
    {% when 'external_video' %}
        {{media | external_video_tag: class:'w-full h-80 object-cover'}}
    {% when 'video' %}
        {{media | video_tag: autoplay: true, loop: true, class:'w-full h-80 object-cover'}}
    {% when 'model' %}
        {{media | model_viewer_tag}}
    {% else %}
        {{media | media_tag}}

{% endcase %}